<div class="pull-right" style="margin-bottom:10px">
  <%= link_to '新增', new_word_path, class:"btn btn-info" %>
</div>
<table class="table table-hover">
  <tr>
    <th>spelling</th>
    <th>word_type</th>
    <th>unit</th>
    <th>sentence</th>
  </tr>
  <% @words.each do |word| %>
  <tr>
    <td><%= link_to "#{word.spelling}", edit_word_path(word) %></td>
    <td><%= word.word_type %></td>
    <td><%= word.unit.unit_number %></td>
    <td><%= word.sentence %></td>
  </tr>
  <% end %>
</table>
