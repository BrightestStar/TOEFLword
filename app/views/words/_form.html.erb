<%= simple_form_for @word do |f| %>
<%= f.input :spelling %>
<%= f.association :unit, collection: Unit.all.map{|u| [u.unit_number, u.id]}, selected: Unit.all.map(&:unit_number).min %>
<%= f.input :meaning %>
<%= f.input :word_type %>
<%= f.input :sentence %>
<%= f.input :synonym %>
<%= f.input :exist_num %>
<%= f.submit "生成", class: "btn btn-info" %>
<% end %>
<script>
  $("#word_unit_id").select2( { theme: "bootstrap"} );
</script>
