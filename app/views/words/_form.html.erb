<%= simple_form_for @word do |f| %>
<%= f.input :spelling %>
<% min_num = Unit.where("input_status =?", "未完成").map(&:unit_number).min %>
<%= f.association :unit, collection: Unit.order(:unit_number).map{|u| [u.unit_number, u.id]}, selected: min_num %>
<%= f.input :meaning %>
<%= f.input :word_type %>
<%= f.input :sentence %>
<%= f.input :synonym %>
<%= f.input :exist_num %>
<%= f.submit "生成", class: "btn btn-info" %>
<% end %>
<script>
  $("#word_unit_id").select2( { theme: "bootstrap"} );
</script>
